<addon id="plugin.video.linkomanija" name="Linkomanija" version="0.1.5" provider-name="-=Vd=-, Commandos">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
	<import addon="script.module.vd-common"/>
    <import addon="script.module.torrent2http"/>
    <import addon="script.module.beautifulsoup4"/>
    <import addon="script.module.requests"/>
    <import addon="script.module.simpleplugin"/>
    <import addon="script.module.vsdbg"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="addon.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en_gb">Legendary - Linkomanija.net</summary>
	  <summary lang="lt_lt">Legendinė - Linkomanija.net</summary>
	  <summary lang="ru_ru">Легендарная - Linkomanija.net </summary>
